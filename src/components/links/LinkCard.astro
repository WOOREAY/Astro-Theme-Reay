---
/**
 * LinkCard Component
 * 
 * Displays a friend link as an interactive card with:
 * - Website screenshot background
 * - Hover effects revealing the screenshot
 * - Avatar and featured badge
 * - Smooth animations
 */
import type { FriendLink } from '../../data/links.config';

interface Props {
  link: FriendLink;
}

const { link } = Astro.props;
---

<a
  href={link.url}
  target="_blank"
  rel="noopener noreferrer"
  class="link-card"
  data-category={link.category}
  data-featured={link.featured}
>
  <!-- Background: Website screenshot -->
  <div class="link-background">
    <img 
      src={`https://api.microlink.io/?url=${encodeURIComponent(link.url)}&screenshot=true&meta=false&embed=screenshot.url`}
      alt={`${link.name} screenshot`}
      class="link-screenshot"
      loading="lazy"
    />
  </div>

  <!-- Semi-transparent overlay -->
  <div class="link-overlay"></div>

  <!-- Content layer -->
  <div class="link-content">
    <!-- Avatar and featured badge -->
    <div class="link-header">
      <div class="link-avatar-wrapper">
        <img 
          src={link.avatar} 
          alt={link.name}
          class="link-avatar"
        />
      </div>
      {link.featured && (
        <span class="featured-badge">
          <i class="i-carbon:star-filled"></i>
        </span>
      )}
    </div>

    <!-- Website information -->
    <div class="link-info">
      <h3 class="link-name">{link.name}</h3>
      <p class="link-description">{link.description}</p>
    </div>

    <!-- Visit icon -->
    <div class="link-action">
      <i class="i-carbon:arrow-up-right"></i>
    </div>
  </div>
</a>

<style>
  .link-card {
    position: relative;
    display: block;
    height: 160px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--md-sys-color-surface-container-low);
    border: 1px solid var(--md-sys-color-outline-variant);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    will-change: transform, box-shadow;
    
    /* Initial state: hidden */
    opacity: 0;
    transform: translateY(20px);
  }

  /* Scroll fade-in animation */
  .link-card.animate-in {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: var(--animation-delay, 0ms);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Background screenshot layer */
  .link-background {
    position: absolute;
    inset: 0;
    z-index: 1;
    overflow: hidden;
  }

  .link-screenshot {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.1);
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Semi-transparent overlay with MD3 color system */
  .link-overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary-container) 0%,
      var(--md-sys-color-tertiary-container) 100%
    );
    opacity: 0.92;
    backdrop-filter: blur(20px) saturate(1.4);
    -webkit-backdrop-filter: blur(20px) saturate(1.4);
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1),
                backdrop-filter 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Content layer */
  .link-content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 0.875rem;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Avatar section */
  .link-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.625rem;
  }

  .link-avatar-wrapper {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--md-sys-color-surface);
    box-shadow: 0 2px 8px var(--md-sys-color-shadow);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .link-avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    border-radius: 50%;
    box-shadow: 0 2px 6px var(--md-sys-color-shadow);
    font-size: 0.6875rem;
  }

  /* Site information */
  .link-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .link-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--md-sys-color-on-primary-container);
    margin: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .link-description {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-tertiary-container);
    line-height: 1.4;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Visit icon */
  .link-action {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-top: 0.5rem;
    margin-top: auto;
  }

  .link-action i {
    font-size: 1.125rem;
    color: var(--md-sys-color-primary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hover effects */
  .link-card:hover {
    transform: translateY(-4px) scale(1.01);
    box-shadow: var(--md-sys-color-shadow) 0 8px 24px;
    border-color: var(--md-sys-color-primary);
    z-index: 10;
  }

  .link-card:hover .link-overlay {
    opacity: 0.1;
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
  }

  .link-card:hover .link-screenshot {
    transform: scale(1);
  }

  .link-card:hover .link-avatar-wrapper {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .link-card:hover .link-name {
    color: var(--md-sys-color-primary);
    transform: translateX(4px);
  }

  .link-card:hover .link-description {
    color: var(--md-sys-color-on-surface);
  }

  .link-card:hover .link-action i {
    transform: translate(4px, -4px) rotate(45deg);
    color: var(--md-sys-color-tertiary);
  }

  .link-card:hover .featured-badge {
    animation: pulse 1s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Click effect */
  .link-card:active {
    transform: translateY(-4px) scale(1.01);
    transition-duration: 0.1s;
  }

  /* Hide filtered cards */
  .link-card.hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .link-card {
      height: 140px;
    }

    .link-content {
      padding: 0.75rem;
    }

    .link-avatar-wrapper {
      width: 36px;
      height: 36px;
      border-radius: 8px;
    }

    .link-name {
      font-size: 0.875rem;
    }

    .link-description {
      font-size: 0.6875rem;
      -webkit-line-clamp: 2;
    }

    .link-action i {
      font-size: 1rem;
    }

    .featured-badge {
      width: 20px;
      height: 20px;
      font-size: 0.625rem;
    }
  }
</style>
