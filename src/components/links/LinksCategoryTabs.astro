---
/**
 * LinksCategoryTabs.astro
 * Links category tab navigation
 */
interface Props {
  categories: Array<{
    id: string;
    label: string;
    icon: string;
  }>;
  linkCounts: Record<string, number>;
  currentCategory?: string;
  groupId?: string;  // Used to differentiate between different category groups
}

const { categories, linkCounts, currentCategory = 'all', groupId = '' } = Astro.props;
---

<div class="category-tabs-container" data-group={groupId}>
  <div class="category-tabs">
    {categories.map((category) => (
      <button
        class={`category-tab ${category.id === currentCategory ? 'active' : ''}`}
        data-category={category.id}
        data-group={groupId}
      >
        <i class={category.icon}></i>
        <span class="tab-label">{category.label}</span>
        <span class="tab-count">{linkCounts[category.id] || 0}</span>
      </button>
    ))}
  </div>
</div>

<style>
  .category-tabs-container {
    margin-bottom: 1.5rem;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: var(--md-sys-color-primary) var(--md-sys-color-surface-variant);
  }

  .category-tabs-container::-webkit-scrollbar {
    height: 4px;
  }

  .category-tabs-container::-webkit-scrollbar-track {
    background: var(--md-sys-color-surface-variant);
    border-radius: 2px;
  }

  .category-tabs-container::-webkit-scrollbar-thumb {
    background: var(--md-sys-color-primary);
    border-radius: 2px;
  }

  .category-tabs {
    display: flex;
    gap: 0.625rem;
    padding: 0.375rem;
    min-width: min-content;
  }

  .category-tab {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    background: var(--md-sys-color-surface-container-low);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 999px;
    color: var(--md-sys-color-on-surface-variant);
    font-size: 0.8125rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    white-space: nowrap;
    user-select: none;
  }

  .category-tab:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--md-sys-color-primary);
    color: var(--md-sys-color-primary);
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .category-tab.active {
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary-container),
      var(--md-sys-color-tertiary-container)
    );
    border-color: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary-container);
    box-shadow: 
      0 4px 12px rgba(var(--md-sys-color-primary-rgb), 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    position: relative;
  }

  .category-tab.active::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 999px;
    padding: 2px;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary),
      var(--md-sys-color-tertiary)
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0.6;
  }

  .category-tab.active:hover {
    transform: translateY(-2px) scale(1.02);
  }

  .category-tab i {
    font-size: 0.9375rem;
  }

  .tab-label {
    font-weight: 600;
  }

  .tab-count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.25rem;
    height: 1.25rem;
    padding: 0 0.3125rem;
    background: var(--md-sys-color-surface-variant);
    border-radius: 999px;
    font-size: 0.6875rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface-variant);
  }

  .category-tab.active .tab-count {
    background: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .category-tabs-container {
      margin-bottom: 1.25rem;
    }

    .category-tab {
      padding: 0.4375rem 0.75rem;
      font-size: 0.75rem;
      gap: 0.3125rem;
    }

    .category-tab i {
      font-size: 0.875rem;
    }

    .tab-count {
      min-width: 1.125rem;
      height: 1.125rem;
      font-size: 0.625rem;
    }
  }
</style>
