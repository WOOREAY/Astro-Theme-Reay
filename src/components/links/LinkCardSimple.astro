---
/**
 * LinkCardSimple.astro
 * Simplified link card - without screenshot API
 * Uses gradient background with cleaner design
 */
import type { FriendLink } from '../../data/links.config';

interface Props {
  link: FriendLink;
}

const { link } = Astro.props;

// Generate unique gradient color based on website name
function getGradient(name: string): string {
  const hash = name.split('').reduce((acc, char) => acc + char.charCodeAt(0), 0);
  const hue1 = hash % 360;
  const hue2 = (hash + 120) % 360;
  return `linear-gradient(135deg, hsl(${hue1}, 70%, 60%), hsl(${hue2}, 70%, 60%))`;
}
---

<a
  href={link.url}
  target="_blank"
  rel="noopener noreferrer"
  class="link-card-simple"
  data-category={link.category}
  data-featured={link.featured}
  style={`--card-gradient: ${getGradient(link.name)}`}
>
  <!-- 渐变背景 -->
  <div class="card-background"></div>

  <!-- 半透明蒙版 -->
  <div class="card-overlay"></div>

  <!-- 内容层 -->
  <div class="card-content">
    <!-- 头像和精选标识 -->
    <div class="card-header">
      <div class="card-avatar-wrapper">
        <img 
          src={link.avatar} 
          alt={link.name}
          class="card-avatar"
        />
      </div>
      {link.featured && (
        <span class="featured-badge">
          <i class="i-carbon:star-filled"></i>
        </span>
      )}
    </div>

    <!-- 网站信息 -->
    <div class="card-info">
      <h3 class="card-name">{link.name}</h3>
      <p class="card-description">{link.description}</p>
    </div>

    <!-- 访问图标 -->
    <div class="card-action">
      <i class="i-carbon:arrow-up-right"></i>
    </div>
  </div>
</a>

<style>
  .link-card-simple {
    position: relative;
    display: block;
    height: 160px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--md-sys-color-surface-container-low);
    border: 1px solid var(--md-sys-color-outline-variant);
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    will-change: transform, box-shadow;
    
    /* Initial state */
    opacity: 0;
    transform: translateY(20px);
  }

  /* Scroll fade-in animation */
  .link-card-simple.animate-in {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: var(--animation-delay, 0ms);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Gradient background */
  .card-background {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: var(--card-gradient);
    opacity: 0.8;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Semi-transparent overlay with MD3 color system */
  .card-overlay {
    position: absolute;
    inset: 0;
    z-index: 2;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary-container) 0%,
      var(--md-sys-color-tertiary-container) 100%
    );
    opacity: 0.92;
    backdrop-filter: blur(20px) saturate(1.4);
    -webkit-backdrop-filter: blur(20px) saturate(1.4);
    transition: opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1),
                backdrop-filter 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Content layer */
  .card-content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 0.875rem;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* 头像区域 */
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.625rem;
  }

  .card-avatar-wrapper {
    position: relative;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--md-sys-color-surface);
    box-shadow: 0 2px 8px var(--md-sys-color-shadow);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .featured-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    border-radius: 50%;
    box-shadow: 0 2px 6px var(--md-sys-color-shadow);
    font-size: 0.6875rem;
  }

  /* Site information */
  .card-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .card-name {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--md-sys-color-on-primary-container);
    margin: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .card-description {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-tertiary-container);
    line-height: 1.4;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Visit icon */
  .card-visit-icon {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding-top: 0.5rem;
    margin-top: auto;
  }

  .card-action i {
    font-size: 1.125rem;
    color: var(--md-sys-color-primary);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Hover effects */
  .link-card-simple:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
    border-color: var(--md-sys-color-primary);
    z-index: 10;
  }

  .link-card-simple:hover .card-overlay {
    opacity: 0.1;
    backdrop-filter: blur(2px);
    -webkit-backdrop-filter: blur(2px);
  }

  .link-card-simple:hover .card-background {
    opacity: 1;
    transform: scale(1.05);
  }

  .link-card-simple:hover .card-avatar-wrapper {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  }

  .link-card-simple:hover .card-name {
    color: var(--md-sys-color-primary);
    transform: translateX(4px);
  }

  .link-card-simple:hover .card-description {
    color: var(--md-sys-color-on-surface);
  }

  .link-card-simple:hover .card-action i {
    transform: translate(4px, -4px) rotate(45deg);
    color: var(--md-sys-color-tertiary);
  }

  .link-card-simple:hover .featured-badge {
    animation: pulse 1s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  /* Click effect */
  .link-card-simple:active {
    transform: translateY(-4px) scale(1.01);
    transition-duration: 0.1s;
  }

  /* Hide filtered cards */
  .link-card-simple[data-filtered="true"] {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .link-card-simple {
      height: 140px;
    }

    .card-content {
      padding: 0.75rem;
    }

    .card-avatar-wrapper {
      width: 36px;
      height: 36px;
      border-radius: 8px;
    }

    .card-name {
      font-size: 0.875rem;
    }

    .card-description {
      font-size: 0.6875rem;
      -webkit-line-clamp: 2;
    }

    .card-action i {
      font-size: 1rem;
    }

    .featured-badge {
      width: 20px;
      height: 20px;
      font-size: 0.625rem;
    }
  }
</style>
