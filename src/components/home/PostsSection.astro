---
/**
 * PostsSection Component
 * Latest blog posts section for homepage
 */
import { getSortedPosts } from '../../utils/blog';

const allPosts = await getSortedPosts();
const latestPosts = allPosts.slice(0, 6);
---

<div class="h-full box-border flex flex-col px-4 py-6 overflow-y-auto">
  <div class="posts-section max-w-6xl mx-auto w-full flex-shrink-0">
    <!-- Section Header -->
    <div class="section-header text-center mb-6 relative">
      <div class="absolute inset-0 -z-10 opacity-50">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-gradient-to-br from-[var(--md-sys-color-primary)]/10 to-[var(--md-sys-color-tertiary)]/10 rounded-full blur-3xl"></div>
      </div>
      
      <h2 class="section-title inline-flex items-center justify-center gap-2 text-2xl md:text-3xl font-700 text-[var(--md-sys-color-on-surface)] mb-2">
        <span class="icon-wrapper inline-flex items-center justify-center w-10 h-10 bg-gradient-to-br from-[var(--md-sys-color-primary-container)] to-[var(--md-sys-color-tertiary-container)] rounded-xl">
          <i class="i-carbon:blog text-xl text-[var(--md-sys-color-primary)]"></i>
        </span>
        <span class="bg-gradient-to-r from-[var(--md-sys-color-primary)] to-[var(--md-sys-color-tertiary)] bg-clip-text text-transparent" data-i18n="posts.title">
          最新文章
        </span>
      </h2>
      <p class="section-subtitle text-xs md:text-sm text-[var(--md-sys-color-on-surface-variant)] font-500" data-i18n="posts.subtitle">
        记录学习 · 分享思考 · 持续成长
      </p>
      
      <div class="flex items-center justify-center gap-2 mt-3">
        <div class="w-12 h-0.5 bg-gradient-to-r from-transparent to-[var(--md-sys-color-primary)]/50"></div>
        <div class="w-2 h-2 rounded-full bg-[var(--md-sys-color-primary)]"></div>
        <div class="w-12 h-0.5 bg-gradient-to-l from-transparent to-[var(--md-sys-color-primary)]/50"></div>
      </div>
    </div>

    {latestPosts.length > 0 ? (
      <div class="posts-grid grid gap-3 md:gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        {latestPosts.map((post, index) => (
          <article 
            class="post-card group animate-fade-in"
            style={`animation-delay: ${index * 100}ms;`}
          >
            <a href={`/blog/${post.id}`} class="block h-full">
              <div class="card-inner relative h-full p-4 bg-gradient-to-br from-[var(--md-sys-color-surface-container-low)]/80 to-[var(--md-sys-color-surface-container)]/80 backdrop-blur-md border border-[var(--md-sys-color-outline-variant)]/50 rounded-xl transition-all duration-300 hover:border-[var(--md-sys-color-primary)] hover:shadow-xl hover:-translate-y-2 overflow-hidden flex flex-col gap-3">
                
                <div class="absolute inset-0 bg-gradient-to-br from-[var(--md-sys-color-primary)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                
                <div class="absolute -top-8 -right-8 w-24 h-24 bg-gradient-to-br from-[var(--md-sys-color-primary)]/10 to-[var(--md-sys-color-tertiary)]/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500"></div>
                
                <div class="relative z-10">
                  <div class="post-meta flex items-center justify-between mb-2">
                    <time class="flex items-center gap-1 px-2 py-0.5 text-xs font-500 bg-[var(--md-sys-color-surface-container-highest)]/80 text-[var(--md-sys-color-on-surface-variant)] rounded-lg backdrop-blur-sm">
                      <i class="i-carbon:calendar text-sm text-[var(--md-sys-color-primary)]"></i>
                      {new Date(post.data.publishDate).toLocaleDateString('zh-CN', {
                        year: 'numeric',
                        month: '2-digit',
                        day: '2-digit'
                      })}
                    </time>
                    
                    <!-- 阅读时间 -->
                    {post.data.readingTime && (
                      <span class="flex items-center gap-1 text-xs text-[var(--md-sys-color-on-surface-variant)]">
                        <i class="i-carbon:time text-sm"></i>
                        {Math.ceil(post.data.readingTime)} 分钟
                      </span>
                    )}
                  </div>

                  <!-- 标题 -->
                  <h3 class="post-title text-sm md:text-base font-700 text-[var(--md-sys-color-on-surface)] mb-2 line-clamp-2 group-hover:text-[var(--md-sys-color-primary)] transition-colors leading-snug">
                    {post.data.title}
                  </h3>

                  <!-- 描述 -->
                  {post.data.description && (
                    <p class="post-description text-xs text-[var(--md-sys-color-on-surface-variant)]/90 mb-3 line-clamp-2 flex-1 leading-relaxed">
                      {post.data.description}
                    </p>
                  )}

                  <!-- 标签 -->
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="post-tags flex flex-wrap gap-1.5 mt-auto pt-2 border-t border-[var(--md-sys-color-outline-variant)]/30">
                      {post.data.tags.slice(0, 2).map((tag) => (
                        <span class="tag inline-flex items-center gap-1 px-2 py-0.5 text-xs font-500 bg-gradient-to-r from-[var(--md-sys-color-primary-container)]/60 to-[var(--md-sys-color-tertiary-container)]/60 text-[var(--md-sys-color-on-primary-container)] rounded-full backdrop-blur-sm transition-all duration-300 hover:scale-105">
                          <i class="i-carbon:tag text-xs"></i>
                          {tag}
                        </span>
                      ))}
                      {post.data.tags.length > 2 && (
                        <span class="text-xs text-[var(--md-sys-color-on-surface-variant)]">
                          +{post.data.tags.length - 2}
                        </span>
                      )}
                    </div>
                  )}
                  
                  <!-- 阅读更多指示器 -->
                  <div class="read-more-indicator flex items-center gap-1 mt-2 text-xs font-600 text-[var(--md-sys-color-primary)] opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <span data-i18n="posts.readMore">阅读文章</span>
                    <i class="i-carbon:arrow-right text-sm group-hover:translate-x-1 transition-transform"></i>
                  </div>
                </div>
              </div>
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state text-center py-16">
        <i class="i-carbon:document-blank text-6xl text-[var(--md-sys-color-outline)] mb-4"></i>
        <p class="text-lg text-[var(--md-sys-color-on-surface-variant)]" data-i18n="posts.empty">暂无文章</p>
      </div>
    )}

    {latestPosts.length > 0 && (
      <div class="view-more text-center mt-6">
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 px-6 py-2 text-sm font-700 bg-gradient-to-r from-[var(--md-sys-color-primary)] to-[var(--md-sys-color-tertiary)] text-[var(--md-sys-color-on-primary)] rounded-full shadow-lg transition-all duration-300 hover:shadow-2xl hover:scale-105 hover:gap-3 group relative overflow-hidden"
        >
          <!-- 光晕效果 -->
          <span class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></span>
          
          <span class="relative z-10" data-i18n="posts.viewAll">查看全部文章</span>
          <i class="i-carbon:arrow-right text-lg relative z-10 group-hover:translate-x-1 transition-transform"></i>
        </a>
        
        <!-- 统计信息 -->
        <div class="flex items-center justify-center gap-4 mt-4 text-xs text-[var(--md-sys-color-on-surface-variant)]">
          <span class="flex items-center gap-1.5">
            <i class="i-carbon:document text-sm text-[var(--md-sys-color-primary)]"></i>
            <span data-i18n="posts.stats.total">共</span> {allPosts.length} <span data-i18n="posts.stats.total">篇文章</span>
          </span>
          <span class="w-1 h-1 rounded-full bg-[var(--md-sys-color-outline)]"></span>
          <span class="flex items-center gap-1.5">
            <i class="i-carbon:time text-sm text-[var(--md-sys-color-primary)]"></i>
            <span data-i18n="posts.stats.updating">持续更新中</span>
          </span>
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Fade-in animation */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    opacity: 0;
    animation: fade-in 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
  
  /* Icon wrapper pulsing glow animation */
  .icon-wrapper {
    animation: pulse-glow 2s ease-in-out infinite;
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 var(--md-sys-color-primary);
      opacity: 1;
    }
    50% {
      box-shadow: 0 0 20px 5px var(--md-sys-color-primary);
      opacity: 0.8;
    }
  }
  
  /* Card hover effect optimization */
  .post-card {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .post-card:hover {
    transform: translateY(-4px);
  }
  
  /* Tag hover effect */
  .tag {
    cursor: default;
    position: relative;
  }
  
  .tag::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, var(--md-sys-color-primary), var(--md-sys-color-tertiary));
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .tag:hover::before {
    opacity: 0.2;
  }
  
  /* Responsive optimization */
  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
    
    .card-content {
      padding: 1rem;
    }
  }
</style>
