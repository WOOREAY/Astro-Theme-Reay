---
/**
 * PostMeta Component
 * Article metadata display: publish date, update date, reading time, tags
 */
import { formatDate } from '../../utils/blog';

interface Props {
  publishDate: Date;
  updatedDate?: Date;
  readingMinutes?: number;
  language?: string;
  tags?: string[];
}

const { publishDate, updatedDate, readingMinutes, language, tags = [] } = Astro.props;
---

<div class="post-meta flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-[var(--md-sys-color-on-surface-variant)]">
  <span class="flex items-center gap-1.5">
    <i class="i-carbon:calendar text-base"></i>
    <time datetime={publishDate.toISOString()}>
      {formatDate(publishDate)}
    </time>
  </span>
  
  {updatedDate && (
    <span class="flex items-center gap-1.5">
      / Update {formatDate(updatedDate)}
    </span>
  )}
  
  {readingMinutes && (
    <span class="flex items-center gap-1.5">
      <i class="i-carbon:time text-base"></i>
      {readingMinutes} min read
    </span>
  )}
  
  {language && (
    <span class="flex items-center gap-1.5">
      <i class="i-carbon:language text-base"></i>
      {language}
    </span>
  )}
  
  {tags.length > 0 && (
    <span class="flex items-center gap-1.5">
      <i class="i-carbon:tag text-base"></i>
      {tags.join(' / ')}
    </span>
  )}
</div>
