---
/**
 * BlogListHeader.astro
 * 博客列表页面头部组件
 */
import { useI18n } from '../../utils/i18n';

interface Props {
  totalPosts: number;
}

const { totalPosts } = Astro.props;
const { t } = useI18n();
---

<div class="blog-header">
  <div class="header-content">
    <h1 class="page-title">
      <i class="i-carbon:blog"></i>
      <span data-i18n="blog.title">{t('blog.title')}</span>
    </h1>
    <p class="page-subtitle" data-i18n="blog.subtitle">
      {t('blog.subtitle')}
    </p>
    <div class="page-meta">
      {totalPosts} <span>{t('archives.postsCount')}</span>
    </div>
  </div>
</div>

<script>
  import { initI18n } from '../../scripts/i18n-content-updater';
  initI18n();
</script>

<style>
  .blog-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--md-sys-color-outline-variant);
  }

  .header-content {
    text-align: center;
  }

  .page-title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.5rem 0;
  }

  .page-title i {
    font-size: 1.5rem;
    color: var(--md-sys-color-primary);
  }

  .page-subtitle {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0 0 0.75rem 0;
    opacity: 0.9;
  }

  .page-meta {
    font-size: 0.8125rem;
    color: var(--md-sys-color-on-surface-variant);
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 1.5rem;
    }

    .page-title i {
      font-size: 1.25rem;
    }

    .page-subtitle {
      font-size: 0.8125rem;
    }
  }
</style>
