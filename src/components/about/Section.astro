---
/**
 * Section.astro
 * General content section component - supports fully customizable card display
 * Supports Carbon icons and custom image logos
 */
import { useI18n } from '../../utils/i18n';

interface Item {
  name: string;
  description?: string;
  url?: string;
  icon?: string;  // Carbon icon, e.g., 'i-carbon:code'
  logo?: string;  // Custom image logo, e.g., '/images/logo.png' (higher priority than icon)
}

interface Props {
  id?: string;
  title: string;
  description?: string;
  icon?: string;
  items: Item[];
  columns?: 2 | 3 | 4 | 5;
  compact?: boolean;
  colorTheme?: 'primary' | 'secondary' | 'tertiary' | 'accent';
}

const { 
  id,
  title, 
  description,
  icon,
  items, 
  columns = 3,
  compact = false,
  colorTheme = 'primary',
} = Astro.props;

const { t } = useI18n();

// Check if title is a translation key (format: 'about.xxx.title')
const isTitleTranslationKey = title.startsWith('about.') && title.includes('.title');
const isDescTranslationKey = description && description.startsWith('about.');
const displayTitle = isTitleTranslationKey ? t(title as any) : title;
const displayDescription = isDescTranslationKey ? t(description as any) : description;
---

<section class={`content-section theme-${colorTheme}`} id={id}>
  <div class="section-header">
    <div class="header-content">
      {icon && <i class={`header-icon ${icon}`}></i>}
      <h2 
        class="section-title" 
        data-i18n={isTitleTranslationKey ? title : undefined}
      >
        {displayTitle}
      </h2>
    </div>
    {displayDescription && (
      <p 
        class="section-description"
        data-i18n={isDescTranslationKey ? description : undefined}
      >
        {displayDescription}
      </p>
    )}
  </div>

  <div class={`items-grid cols-${columns} ${compact ? 'compact' : ''}`}>
    {items.map((item) => (
      <div class="item-card">
        {item.url ? (
          <a href={item.url} target="_blank" rel="noopener noreferrer" class="item-link">
            {(item.logo || item.icon) && (
              <div class="item-icon">
                {item.logo ? (
                  <img src={item.logo} alt={item.name} class="item-logo-img" />
                ) : (
                  <i class={item.icon}></i>
                )}
              </div>
            )}
            <div class="item-content">
              <h3 class="item-name">{item.name}</h3>
              {item.description && <p class="item-description">{item.description}</p>}
            </div>
            <i class="i-carbon:arrow-up-right item-arrow"></i>
          </a>
        ) : (
          <div class="item-content-only">
            {(item.logo || item.icon) && (
              <div class="item-icon">
                {item.logo ? (
                  <img src={item.logo} alt={item.name} class="item-logo-img" />
                ) : (
                  <i class={item.icon}></i>
                )}
              </div>
            )}
            <div class="item-content">
              <h3 class="item-name">{item.name}</h3>
              {item.description && <p class="item-description">{item.description}</p>}
            </div>
          </div>
        )}
      </div>
    ))}
  </div>
</section>

<style>
  .content-section {
    margin-bottom: 3rem;
  }

  /* Concise header styling */
  .section-header {
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--section-accent);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .header-icon {
    font-size: 1.5rem;
    color: var(--section-accent);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }

  .section-description {
    font-size: 0.9375rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.6;
  }

  /* Theme color variables for accent highlights */
  .theme-primary {
    --section-accent: var(--md-sys-color-primary);
  }

  .theme-secondary {
    --section-accent: var(--md-sys-color-secondary);
  }

  .theme-tertiary {
    --section-accent: var(--md-sys-color-tertiary);
  }

  .theme-accent {
    --section-accent: var(--md-sys-color-primary);
  }

  /* Grid layout with optimized responsive breakpoints */
  .items-grid {
    display: grid;
    gap: 1rem;
  }

  /* 2-column layout: suitable for detailed content */
  .items-grid.cols-2 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 360px), 1fr));
  }

  /* 3-column layout: default recommended */
  .items-grid.cols-3 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 280px), 1fr));
  }

  /* 4-column layout: compact display */
  .items-grid.cols-4 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 240px), 1fr));
  }

  /* 5-column layout: icon wall style */
  .items-grid.cols-5 {
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 200px), 1fr));
  }

  .items-grid.compact {
    gap: 0.875rem;
  }

  /* Responsive breakpoint optimization */
  @media (max-width: 1200px) {
    .items-grid.cols-5 {
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 220px), 1fr));
    }
  }

  @media (max-width: 992px) {
    .items-grid.cols-4,
    .items-grid.cols-5 {
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 260px), 1fr));
    }
  }

  @media (max-width: 768px) {
    .items-grid.cols-3,
    .items-grid.cols-4,
    .items-grid.cols-5 {
      grid-template-columns: repeat(auto-fit, minmax(min(100%, 300px), 1fr));
    }
  }

  @media (max-width: 576px) {
    .items-grid {
      grid-template-columns: 1fr !important;
    }
  }

  /* Unified card styling */
  .item-card {
    position: relative;
    background: var(--md-sys-color-surface-container-low);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .item-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--section-accent);
    opacity: 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .item-card:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--section-accent);
    transform: translateY(-2px);
    box-shadow: 
      0 8px 16px rgba(0,0,0,0.08),
      0 2px 4px rgba(0,0,0,0.04);
  }

  .item-card:hover::before {
    opacity: 1;
  }

  .item-link,
  .item-content-only {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.125rem;
    position: relative;
    z-index: 1;
    min-height: 80px; /* Ensure consistent minimum card height */
  }

  .item-link {
    text-decoration: none;
    color: inherit;
  }

  .item-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--md-sys-color-primary-container);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .item-card:hover .item-icon {
    background: var(--section-accent);
    transform: scale(1.05);
  }

  .item-icon i {
    font-size: 24px; /* Larger icon size for better visibility */
    line-height: 1;
    color: var(--md-sys-color-on-primary-container);
    transition: color 0.3s ease;
    display: block; /* Ensure proper icon rendering */
  }

  .item-card:hover .item-icon i {
    color: var(--md-sys-color-on-primary);
  }

  /* Custom logo image styling */
  .item-logo-img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .item-card:hover .item-logo-img {
    transform: scale(1.1);
  }

  .item-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.25rem;
  }

  .item-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0;
    line-height: 1.4;
    transition: color 0.3s ease;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .item-card:hover .item-name {
    color: var(--section-accent);
  }

  .item-description {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.5;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .item-arrow {
    flex-shrink: 0;
    font-size: 18px;
    color: var(--md-sys-color-on-surface-variant);
    opacity: 0;
    transform: translate(-4px, 4px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .item-link:hover .item-arrow {
    opacity: 1;
    transform: translate(0, 0);
    color: var(--section-accent);
  }

  /* Compact mode for 4-5 column layouts */
  .items-grid.compact .item-card {
    border-radius: 10px;
  }

  .items-grid.compact .item-link,
  .items-grid.compact .item-content-only {
    padding: 1rem;
    gap: 0.875rem;
    min-height: 72px;
  }

  .items-grid.compact .item-icon {
    width: 44px;
    height: 44px;
    border-radius: 10px;
  }

  .items-grid.compact .item-icon i {
    font-size: 22px;
  }

  .items-grid.compact .item-logo-img {
    width: 100%;
    height: 100%;
  }

  .items-grid.compact .item-name {
    font-size: 0.9375rem;
    -webkit-line-clamp: 1; /* Single line title in compact mode */
  }

  .items-grid.compact .item-description {
    font-size: 0.8125rem;
    -webkit-line-clamp: 1; /* Single line description in compact mode */
  }

  /* Responsive optimization */
  @media (max-width: 768px) {
    .content-section {
      margin-bottom: 2.5rem;
    }

    .section-title {
      font-size: 1.375rem;
    }

    .section-description {
      font-size: 0.875rem;
    }

    .item-card:hover {
      transform: translateY(-1px);
    }
  }
</style>
