---
/**
 * SocialNetworks.astro
 * About page - Social networks component
 */
import { useI18n } from '../../utils/i18n';

interface SocialNetwork {
  platform: string;
  username: string;
  url: string;
  icon: string;
  followers: number;
}

interface Props {
  socials: SocialNetwork[];
}

const { socials } = Astro.props;
const { t } = useI18n();

// Format numbers (display 'k' for values over 1000)
function formatNumber(num: number): string {
  if (num >= 1000) {
    return `${(num / 1000).toFixed(1)}k`;
  }
  return num.toString();
}
---

<section class="socials-section">
  <div class="section-header">
    <div class="header-content">
      <i class="header-icon i-carbon:share"></i>
      <h2 class="section-title" data-i18n="about.social.title">{t('about.social.title')}</h2>
    </div>
    <p class="section-description" data-i18n="about.social.description">{t('about.social.description')}</p>
  </div>

  <div class="socials-grid">
    {socials.map((social) => (
      <a href={social.url} target="_blank" rel="noopener noreferrer" class="social-card">
        <div class="social-icon">
          <i class={social.icon}></i>
        </div>
        <div class="social-info">
          <h3 class="social-platform">{social.platform}</h3>
          <p class="social-username">{social.username}</p>
          {social.followers > 0 && (
            <p class="social-followers">
              <i class="i-carbon:user-multiple"></i>
              {formatNumber(social.followers)} followers
            </p>
          )}
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .socials-section {
    margin-bottom: 3rem;
  }

  /* Unified header styling */
  .section-header {
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--md-sys-color-secondary);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
  }

  .header-icon {
    font-size: 1.5rem;
    color: var(--md-sys-color-secondary);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }

  .section-description {
    font-size: 0.9375rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.6;
  }

  .socials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(100%, 240px), 1fr));
    gap: 1rem;
  }

      gap: 1rem;
    padding: 1rem;
    position: relative;
    z-index: 1;
    min-height: 80px; /* Ensure consistent card height */
  }

  .social-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: var(--md-sys-color-secondary);
    opacity: 0;
    border-radius: 12px 0 0 12px;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .social-card:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--md-sys-color-secondary);
    transform: translateY(-2px);
    box-shadow: 
      0 8px 16px rgba(0,0,0,0.08),
      0 2px 4px rgba(0,0,0,0.04);
  }

  .social-card:hover::before {
    opacity: 1;
  }

  .social-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 52px;
    height: 52px;
    background: var(--md-sys-color-surface-container-high);
    border-radius: 12px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .social-card:hover .social-icon {
    background: var(--md-sys-color-secondary);
    transform: scale(1.05);
  }

  .social-icon i {
    font-size: 26px;
    line-height: 1;
    color: var(--md-sys-color-on-surface-variant);
    transition: color 0.3s ease;
    display: block; /* Ensure proper icon rendering */
  }

  .social-card:hover .social-icon i {
    color: var(--md-sys-color-on-secondary);
  }

  .social-info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.25rem;
  }

  .social-platform {
    font-size: 1rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0;
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .social-card:hover .social-platform {
    color: var(--md-sys-color-secondary);
  }

  .social-username {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.4;
  }

  .social-followers {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--md-sys-color-secondary);
    margin: 0;
  }

  .social-followers i {
    font-size: 0.875rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 1.375rem;
    }

    .socials-grid {
      grid-template-columns: 1fr;
    }

    .social-card {
      padding: 1rem;
      min-height: 72px;
    }

    .social-icon {
      width: 48px;
      height: 48px;
    }

    .social-icon i {
      font-size: 24px;
    }
  }
</style>
