---
/**
 * ToolsGrid.astro
 * About page - Tools showcase component
 */
interface Tool {
  name: string;
  description: string;
  url: string;
  icon: string;
}

interface ToolCategory {
  category: string;
  items: Tool[];
}

interface Props {
  tools: ToolCategory[];
}

const { tools } = Astro.props;
---

<section class="tools-section">
  <h2 class="section-title">
    <i class="i-carbon:tool-box"></i>
    工具
  </h2>
  <p class="section-description">以下是我正在使用的一些工具：</p>

  <div class="tools-container">
    {tools.map((category) => (
      <div class="tool-category">
        <h3 class="category-title">{category.category}</h3>
        <div class="tools-grid">
          {category.items.map((tool) => (
            <a href={tool.url} target="_blank" rel="noopener noreferrer" class="glass-card-interactive tool-card">
              <div class="tool-icon">
                <i class={tool.icon}></i>
              </div>
              <div class="tool-info">
                <h4 class="tool-name">{tool.name}</h4>
                <p class="tool-description">{tool.description}</p>
              </div>
              <i class="i-carbon:arrow-up-right tool-link-icon"></i>
            </a>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .tools-section {
    margin-bottom: 3rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.5rem 0;
  }

  .section-title i {
    font-size: 1.25rem;
    color: var(--md-sys-color-primary);
  }

  .section-description {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0 0 1.5rem 0;
  }

  .tools-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .tool-category {
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .category-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
    padding-bottom: 0.375rem;
    border-bottom: 2px solid var(--md-sys-color-outline-variant);
  }

  .tools-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 0.875rem;
  }

  .tool-card {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    text-decoration: none;
    position: relative;
  }

  .tool-card:hover {
    border-color: var(--md-sys-color-primary);
  }

  .tool-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    background: var(--md-sys-color-secondary-container);
    color: var(--md-sys-color-on-secondary-container);
    font-size: 1.25rem;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tool-card:hover .tool-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .tool-info {
    flex: 1;
    min-width: 0;
  }

  .tool-name {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.25rem 0;
  }

  .tool-description {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.4;
  }

  .tool-link-icon {
    font-size: 1rem;
    color: var(--md-sys-color-primary);
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tool-card:hover .tool-link-icon {
    transform: translate(2px, -2px);
    color: var(--md-sys-color-tertiary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 1.375rem;
    }

    .tools-grid {
      grid-template-columns: 1fr;
    }

    .tool-card {
      padding: 0.875rem;
    }

    .tool-icon {
      width: 36px;
      height: 36px;
      font-size: 1.125rem;
    }
  }
</style>
