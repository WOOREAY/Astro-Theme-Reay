---
/**
 * ExperienceTimeline.astro
 * About page - Work experience component
 */
import { useI18n } from '../../utils/i18n';

interface Experience {
  company: string;
  position: string;
  startDate: string;
  endDate: string;
  logo: string;
  url: string;
}

interface Props {
  experience: Experience[];
}

const { experience } = Astro.props;
const { t } = useI18n();
---

<section class="experience-section">
  <div class="section-header">
    <div class="header-content">
      <i class="header-icon i-carbon:portfolio"></i>
      <h2 class="section-title" data-i18n="about.experience.title">{t('about.experience.title')}</h2>
    </div>
  </div>

  <div class="timeline">
    {experience.map((exp, index) => (
      <a href={exp.url} target="_blank" rel="noopener noreferrer" class="timeline-item">
        <div class="timeline-marker">
          <div class="timeline-dot"></div>
          {index < experience.length - 1 && <div class="timeline-line"></div>}
        </div>
        
        <div class="timeline-content">
          <div class="exp-header">
            <div class="exp-logo">
              <img src={exp.logo} alt={exp.company} />
            </div>
            <div class="exp-info">
              <h3 class="exp-company">{exp.company}</h3>
              <p class="exp-position">{exp.position}</p>
              <div class="exp-dates">
                <i class="i-carbon:calendar"></i>
                {exp.startDate} - {exp.endDate}
              </div>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .experience-section {
    margin-bottom: 3rem;
  }
  
  /* Unified header styling */
  .experience-header {
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--md-sys-color-primary);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .header-icon {
    font-size: 1.5rem;
    line-height: 1;
    color: var(--md-sys-color-primary);
    display: block;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .timeline-item {
    display: flex;
    gap: 1.25rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .timeline-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--md-sys-color-primary);
    border: 3px solid var(--md-sys-color-primary-container);
    z-index: 1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item:hover .timeline-dot {
    transform: scale(1.3);
    background: var(--md-sys-color-tertiary);
    border-color: var(--md-sys-color-tertiary-container);
  }

  .timeline-line {
    width: 2px;
    flex: 1;
    background: var(--md-sys-color-outline-variant);
    margin-top: 0.375rem;
    min-height: 50px;
  }

  .timeline-content {
    flex: 1;
    padding-bottom: 1.5rem;
  }

  .exp-header {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--md-sys-color-surface);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 14px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item:hover .exp-header {
    background: var(--md-sys-color-primary-container);
    border-color: var(--md-sys-color-primary);
    transform: translateX(4px);
    box-shadow: 
      0 6px 20px -2px rgba(0, 0, 0, 0.12),
      0 3px 10px -2px rgba(0, 0, 0, 0.08);
  }

  .exp-logo {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--md-sys-color-surface-variant);
  }

  .exp-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .exp-info {
    flex: 1;
    min-width: 0;
  }

  .exp-company {
    font-size: 1rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.25rem 0;
  }

  .exp-position {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .exp-dates {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
  }

  .exp-dates i {
    font-size: 0.8125rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 1.375rem;
    }

    .timeline-item {
      gap: 1rem;
    }

    .exp-header {
      padding: 1rem;
      gap: 0.875rem;
    }

    .exp-logo {
      width: 48px;
      height: 48px;
    }

    .exp-company {
      font-size: 0.9375rem;
    }

    .exp-position {
      font-size: 0.8125rem;
    }
  }
</style>
