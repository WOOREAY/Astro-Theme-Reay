---
/**
 * EducationTimeline.astro
 * About page - Education timeline component
 */
import { useI18n } from '../../utils/i18n';

interface Education {
  school: string;
  major: string;
  degree: string;
  startDate: string;
  endDate: string;
  logo: string;
  url: string;
}

interface Props {
  education: Education[];
}

const { education } = Astro.props;
const { t } = useI18n();
---

<section class="education-section">
  <div class="section-header">
    <div class="header-content">
      <i class="header-icon i-carbon:education"></i>
      <h2 class="section-title" data-i18n="about.education.title">{t('about.education.title')}</h2>
    </div>
  </div>

  <div class="timeline">
    {education.map((edu, index) => (
      <a href={edu.url} target="_blank" rel="noopener noreferrer" class="timeline-item">
        <div class="timeline-marker">
          <div class="timeline-dot"></div>
          {index < education.length - 1 && <div class="timeline-line"></div>}
        </div>
        
        <div class="timeline-content">
          <div class="edu-header">
            <div class="edu-logo">
              <img src={edu.logo} alt={edu.school} />
            </div>
            <div class="edu-info">
              <h3 class="edu-school">{edu.school}</h3>
              <p class="edu-major">{edu.major}</p>
              <div class="edu-meta">
                <span class="edu-degree">{edu.degree}</span>
                <span class="edu-dates">
                  <i class="i-carbon:calendar"></i>
                  {edu.startDate} - {edu.endDate}
                </span>
              </div>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .education-section {
    margin-bottom: 3rem;
  }

  /* Unified header styling */
  .education-header {
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--md-sys-color-primary);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .header-icon {
    font-size: 1.5rem;
    line-height: 1;
    color: var(--md-sys-color-primary);
    display: block;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .timeline-item {
    display: flex;
    gap: 1.25rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .timeline-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--md-sys-color-primary);
    border: 3px solid var(--md-sys-color-primary-container);
    z-index: 1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item:hover .timeline-dot {
    transform: scale(1.3);
    background: var(--md-sys-color-tertiary);
    border-color: var(--md-sys-color-tertiary-container);
  }

  .timeline-line {
    width: 2px;
    flex: 1;
    background: var(--md-sys-color-outline-variant);
    margin-top: 0.375rem;
    min-height: 50px;
  }

  .timeline-content {
    flex: 1;
    padding-bottom: 1.5rem;
  }

  .edu-header {
    display: flex;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--md-sys-color-surface);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 14px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .timeline-item:hover .edu-header {
    background: var(--md-sys-color-secondary-container);
    border-color: var(--md-sys-color-secondary);
    transform: translateX(4px);
    box-shadow: 
      0 6px 20px -2px rgba(0, 0, 0, 0.12),
      0 3px 10px -2px rgba(0, 0, 0, 0.08);
  }

  .edu-logo {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    background: var(--md-sys-color-surface-variant);
  }

  .edu-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .edu-info {
    flex: 1;
    min-width: 0;
  }

  .edu-school {
    font-size: 1rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.25rem 0;
  }

  .edu-major {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0 0 0.5rem 0;
  }

  .edu-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.625rem;
    align-items: center;
  }

  .edu-degree {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.625rem;
    background: var(--md-sys-color-tertiary-container);
    color: var(--md-sys-color-on-tertiary-container);
    border-radius: 6px;
    font-size: 0.6875rem;
    font-weight: 600;
  }

  .edu-dates {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
  }

  .edu-dates i {
    font-size: 0.8125rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 1.375rem;
    }

    .timeline-item {
      gap: 1rem;
    }

    .edu-header {
      padding: 1rem;
      gap: 0.875rem;
    }

    .edu-logo {
      width: 48px;
      height: 48px;
    }

    .edu-school {
      font-size: 0.9375rem;
    }

    .edu-major {
      font-size: 0.8125rem;
    }
  }
</style>
