---
/**
 * BlogTechStack.astro
 * About page - Blog tech stack component
 */
interface TechStackItem {
  name: string;
  value: string;
  url: string;
}

interface Props {
  blog: {
    description: string;
    techStack: TechStackItem[];
  };
}

const { blog } = Astro.props;
---

<section class="blog-section">
  <h2 class="section-title">
    <i class="i-carbon:blog"></i>
    关于博客
  </h2>
  <p class="blog-description">{blog.description}</p>

  <div class="tech-stack">
    <h3 class="tech-stack-title">技术栈</h3>
    <div class="tech-stack-grid">
      {blog.techStack.map((item) => (
        <a href={item.url} target="_blank" rel="noopener noreferrer" class="tech-item">
          <span class="tech-name">{item.name}</span>
          <span class="tech-value">{item.value}</span>
          <i class="i-carbon:arrow-up-right tech-link-icon"></i>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-section {
    margin-bottom: 2rem;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.5rem 0;
  }

  .section-title i {
    font-size: 1.25rem;
    color: var(--md-sys-color-primary);
  }

  .blog-description {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0 0 1.5rem 0;
  }

  .tech-stack {
    background: linear-gradient(
      135deg,
      var(--md-sys-color-surface-variant) 0%,
      var(--md-sys-color-surface) 100%
    );
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 14px;
    padding: 1.5rem;
    box-shadow: 
      0 2px 12px -2px rgba(0, 0, 0, 0.06),
      0 1px 4px -1px rgba(0, 0, 0, 0.03);
  }

  .tech-stack-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 1rem 0;
  }

  .tech-stack-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 0.625rem;
  }

  .tech-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.625rem;
    padding: 0.875rem 1rem;
    background: var(--md-sys-color-surface);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tech-item:hover {
    background: var(--md-sys-color-tertiary-container);
    border-color: var(--md-sys-color-tertiary);
    transform: translateY(-2px);
    box-shadow: 
      0 4px 14px -2px rgba(0, 0, 0, 0.1),
      0 2px 7px -2px rgba(0, 0, 0, 0.05);
  }

  .tech-name {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface-variant);
    flex-shrink: 0;
  }

  .tech-value {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    flex: 1;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .tech-link-icon {
    font-size: 0.9375rem;
    color: var(--md-sys-color-primary);
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .tech-item:hover .tech-link-icon {
    transform: translate(2px, -2px);
    color: var(--md-sys-color-tertiary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 1.375rem;
    }

    .tech-stack {
      padding: 1.25rem;
    }

    .tech-stack-grid {
      grid-template-columns: 1fr;
    }

    .tech-item {
      padding: 0.75rem 0.875rem;
    }
  }
</style>
