---
/**
 * AboutIntro.astro
 * About page - Personal introduction component
 * Uses userContent from user.config.ts for multilingual support
 */
import { user, getUserContent } from '../../data/user.config';
import { useI18n } from '../../utils/i18n';

const { currentLang } = useI18n();
const content = getUserContent(currentLang);
---

<section class="intro-section">
  <div class="intro-container">
    <div class="intro-avatar">
      <img src={user.avatar} alt={user.name} class="avatar-image" />
      <div class="avatar-decoration"></div>
    </div>
    
    <div class="intro-content">
      <p class="intro-greeting" data-user-content="greeting">{content.greeting}</p>
      <h1 class="intro-name">{user.name}</h1>
      <p class="intro-tagline" data-user-content="tagline">{content.tagline}</p>
      <div class="intro-description">
        <p data-user-content="bio">{content.bio}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .intro-section {
    margin-bottom: 3rem;
    padding: 1.5rem;
    background: var(--md-sys-color-surface-variant);
    border-radius: 16px;
    border: 1px solid var(--md-sys-color-outline-variant);
    box-shadow: 
      0 2px 12px -2px rgba(0, 0, 0, 0.06),
      0 1px 4px -1px rgba(0, 0, 0, 0.03);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .intro-section:hover {
    box-shadow: 
      0 4px 20px -2px rgba(0, 0, 0, 0.08),
      0 2px 8px -2px rgba(0, 0, 0, 0.04);
  }

  .intro-container {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }

  .intro-avatar {
    position: relative;
    flex-shrink: 0;
  }

  .avatar-image {
    width: 120px;
    height: 120px;
    border-radius: 16px;
    object-fit: cover;
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    border: 2px solid var(--md-sys-color-surface);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .avatar-image:hover {
    transform: scale(1.05) rotate(2deg);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.16);
  }

  .avatar-decoration {
    position: absolute;
    inset: -4px;
    border-radius: 16px;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary),
      var(--md-sys-color-tertiary)
    );
    opacity: 0.2;
    z-index: -1;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .intro-avatar:hover .avatar-decoration {
    opacity: 0.35;
  }

  .intro-content {
    flex: 1;
    min-width: 0;
  }

  .intro-greeting {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--md-sys-color-primary);
    margin: 0 0 0.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .intro-name {
    font-size: 1.75rem;
    font-weight: 900;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary) 0%,
      var(--md-sys-color-secondary) 50%,
      var(--md-sys-color-tertiary) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 0.5rem 0;
    letter-spacing: -0.02em;
  }

  .intro-tagline {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0 0 1rem 0;
  }

  .intro-description {
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--md-sys-color-on-surface-variant);
  }

  .intro-description p {
    margin: 0 0 0.75rem 0;
  }

  .intro-description p:last-child {
    margin-bottom: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .intro-section {
      padding: 1.25rem;
      border-radius: 14px;
    }

    .intro-container {
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
      text-align: center;
    }

    .avatar-image {
      width: 100px;
      height: 100px;
      border-radius: 14px;
    }

    .avatar-decoration {
      border-radius: 14px;
    }

    .intro-name {
      font-size: 1.5rem;
    }

    .intro-tagline {
      font-size: 0.875rem;
    }

    .intro-description {
      font-size: 0.8125rem;
    }
  }
</style>
