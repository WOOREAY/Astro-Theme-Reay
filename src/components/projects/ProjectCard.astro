---
/**
 * ProjectCard Component
 * Individual project card display
 */
import { formatNumber, formatDate, getLanguageColor } from '../../utils/github';

interface Props {
  project: {
    owner: string;
    name: string;
    description: string | null;
    language: string | null;
    stars: number;
    forks: number;
    topics: string[];
    updatedAt: string;
    customDescription?: string;
    customTags?: string[];
    featured?: boolean;
    category?: string;
  };
}

const { project } = Astro.props;
---

<a
  href={`/projects/${project.owner}/${project.name}`}
  class="glass-card-interactive project-card"
  data-category={project.category}
  data-featured={project.featured}
  rel="prefetch"
>
  <div class="project-main">
    <div class="project-header">
      <h3 class="project-name">
        <i class="i-carbon:folder"></i>
        {project.name}
      </h3>
      {project.featured && (
        <span class="featured-badge">
          <i class="i-carbon:star-filled"></i>
          精选
        </span>
      )}
    </div>
    
    <p class="project-description">
      {project.customDescription || project.description || '暂无描述'}
    </p>

    <div class="project-tags">
      {project.language && (
        <span class="tag tag-language" style={`--lang-color: ${getLanguageColor(project.language)}`}>
          <span class="lang-dot"></span>
          {project.language}
        </span>
      )}
      {[...project.topics, ...(project.customTags || [])].slice(0, 5).map(tag => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>

  <!-- 右侧：统计信息 -->
  <div class="project-stats">
    <div class="stat">
      <i class="i-carbon:star"></i>
      <span>{formatNumber(project.stars)}</span>
    </div>
    <div class="stat">
      <i class="i-carbon:branch"></i>
      <span>{formatNumber(project.forks)}</span>
    </div>
    <div class="stat stat-updated">
      <i class="i-carbon:time"></i>
      <span>{formatDate(project.updatedAt)}</span>
    </div>
  </div>
</a>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
  }

  .project-card::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    height: 3px;
    background: linear-gradient(to right, var(--md-sys-color-primary), var(--md-sys-color-tertiary));
    border-radius: 16px 16px 0 0;
    transform: scaleX(0);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
  }

  .project-card:hover::after {
    transform: scaleX(1);
    opacity: 1;
  }

  .project-main {
    flex: 1;
    min-width: 0;
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    margin-bottom: 0.5rem;
  }

  .project-name {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0;
    transition: color 0.2s ease;
  }

  .project-card:hover .project-name {
    color: var(--md-sys-color-primary);
  }

  .project-name i {
    font-size: 1.125rem;
  }

  .featured-badge {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.1875rem 0.5rem;
    background: linear-gradient(135deg, var(--md-sys-color-primary-container), var(--md-sys-color-tertiary-container));
    color: var(--md-sys-color-primary);
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: 999px;
  }

  .featured-badge i {
    font-size: 0.75rem;
  }

  .project-description {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    line-height: 1.5;
    margin: 0 0 0.75rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }

  .tag {
    padding: 0.1875rem 0.5rem;
    background: var(--md-sys-color-surface-variant);
    color: var(--md-sys-color-on-surface-variant);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 4px;
  }

  .tag-language {
    display: flex;
    align-items: center;
    gap: 0.3125rem;
  }

  .lang-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--lang-color);
  }

  .project-stats {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--md-sys-color-outline-variant);
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 0.3125rem;
    font-size: 0.8125rem;
    color: var(--md-sys-color-on-surface-variant);
    font-weight: 500;
  }

  .stat i {
    font-size: 0.9375rem;
  }

  .stat-updated {
    margin-left: auto;
  }

  @media (max-width: 768px) {
    .project-stats {
      flex-wrap: wrap;
    }

    .stat-updated {
      margin-left: 0;
      width: 100%;
    }
  }
</style>
