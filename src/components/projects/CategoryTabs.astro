---
/**
 * CategoryTabs.astro
 * 项目分类标签组件
 */
import type { ProjectCategory } from '../../data/projects.config';

interface Props {
  categories: ProjectCategory[];
  projectCounts: Record<string, number>;
  currentCategory?: string;
}

const { categories, projectCounts, currentCategory = 'all' } = Astro.props;
---

<nav class="projects-categories">
  {categories.map((category) => {
    const count = projectCounts[category.id] || 0;
    
    return (
      <a
        href={`/projects?category=${category.id}`}
        class={`category-tab ${currentCategory === category.id ? 'active' : ''}`}
        data-category={category.id}
      >
        <i class={category.icon}></i>
        <span>{category.name}</span>
        <span class="count">{count}</span>
      </a>
    );
  })}
</nav>

<style>
  .projects-categories {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 2rem;
    overflow-x: auto;
    padding: 0.5rem 0;
    /* Improve horizontal scrolling */
    scrollbar-width: thin;
    scrollbar-color: var(--md-sys-color-outline-variant) transparent;
  }

  .projects-categories::-webkit-scrollbar {
    height: 6px;
  }

  .projects-categories::-webkit-scrollbar-track {
    background: transparent;
  }

  .projects-categories::-webkit-scrollbar-thumb {
    background: var(--md-sys-color-outline-variant);
    border-radius: 3px;
  }

  .projects-categories::-webkit-scrollbar-thumb:hover {
    background: var(--md-sys-color-outline);
  }

  .category-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    background: var(--md-sys-color-surface-container-low);
    border: 2px solid var(--md-sys-color-outline-variant);
    border-radius: 999px;
    color: var(--md-sys-color-on-surface-variant);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    white-space: nowrap;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    flex-shrink: 0;
  }

  .category-tab::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 999px;
    background: linear-gradient(
      135deg,
      transparent,
      rgba(var(--md-sys-color-primary-rgb), 0.1)
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-tab:hover::before {
    opacity: 1;
  }

  .category-tab i {
    font-size: 1.125rem;
  }

  .category-tab .count {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 1.5rem;
    height: 1.5rem;
    padding: 0 0.375rem;
    background: var(--md-sys-color-surface-variant);
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .category-tab:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--md-sys-color-primary);
    color: var(--md-sys-color-primary);
    transform: translateY(-2px);
  }

  .category-tab.active {
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary-container),
      var(--md-sys-color-secondary-container)
    );
    border-color: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary-container);
    box-shadow: 
      0 4px 12px rgba(var(--md-sys-color-primary-rgb), 0.25),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }

  .category-tab.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 3px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--md-sys-color-primary),
      transparent
    );
    border-radius: 2px;
  }

  .category-tab.active .count {
    background: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary);
  }
</style>
