---
/**
 * ArchiveStats.astro
 * 归档统计面板 - 显示博客的各项统计数据（优化版）
 */
import { useI18n } from '../../utils/i18n';

const { t } = useI18n();

interface Props {
  totalPosts: number;
  totalTags: number;
  totalSeries: number;
  totalWords: number;
  averageWords: number;
  maxWords: number;
  longestPostTitle: string;
  totalYears: number;
  postsThisYear: number;
  publishFrequency: number;
  firstPostDate: Date | null;
  latestPostDate: Date | null;
}

const { 
  totalPosts, 
  totalTags, 
  totalSeries,
  totalWords,
  averageWords,
  maxWords,
  longestPostTitle,
  totalYears,
  postsThisYear,
  publishFrequency,
  firstPostDate,
  latestPostDate
} = Astro.props;

// 计算博客运行天数
const daysSinceFirst = firstPostDate 
  ? Math.floor((Date.now() - firstPostDate.getTime()) / (1000 * 60 * 60 * 24))
  : 0;

// 格式化大数字
const formatNumber = (num: number) => {
  if (num >= 10000) return `${(num / 10000).toFixed(1)}万`;
  return num.toLocaleString();
};

// 计算百分比（用于环形图）
const maxValue = Math.max(totalPosts, totalTags, totalSeries);
const postsPercentage = maxValue > 0 ? (totalPosts / maxValue) * 100 : 0;
const tagsPercentage = maxValue > 0 ? (totalTags / maxValue) * 100 : 0;
---

<div class="archive-stats-container">
  <!-- 顶部关键指标卡片 -->
  <div class="key-stats-grid">
    <!-- 总字数 -->
    <div class="stat-card-compact">
      <div class="stat-icon-wrapper">
        <i class="i-carbon:pen text-2xl"></i>
      </div>
      <div class="stat-content">
        <div class="stat-value">{formatNumber(totalWords)}</div>
        <div class="stat-label" data-i18n="archives.totalWords">{t('archives.totalWords')}</div>
      </div>
    </div>

    <!-- 平均字数 -->
    <div class="stat-card-compact">
      <div class="stat-icon-wrapper">
        <i class="i-carbon:text-align-left text-2xl"></i>
      </div>
      <div class="stat-content">
        <div class="stat-value">{formatNumber(averageWords)}</div>
        <div class="stat-label" data-i18n="archives.avgWords">{t('archives.avgWords')}</div>
      </div>
    </div>

    <!-- 最近更新 -->
    <div class="stat-card-compact">
      <div class="stat-icon-wrapper">
        <i class="i-carbon:update-now text-2xl"></i>
      </div>
      <div class="stat-content">
        <div class="stat-value">
          {latestPostDate ? new Date(latestPostDate).toLocaleDateString('zh-CN', { month: 'short', day: 'numeric' }) : '-'}
        </div>
        <div class="stat-label" data-i18n="archives.latestUpdate">{t('archives.latestUpdate')}</div>
      </div>
    </div>

    <!-- 今年发布 -->
    <div class="stat-card-compact">
      <div class="stat-icon-wrapper">
        <i class="i-carbon:calendar text-2xl"></i>
      </div>
      <div class="stat-content">
        <div class="stat-value">{postsThisYear}</div>
        <div class="stat-label" data-i18n="archives.publishedThisYear">{t('archives.publishedThisYear')}</div>
      </div>
    </div>

    <!-- 运行天数 -->
    <div class="stat-card-compact">
      <div class="stat-icon-wrapper">
        <i class="i-carbon:time text-2xl"></i>
      </div>
      <div class="stat-content">
        <div class="stat-value">{daysSinceFirst}</div>
        <div class="stat-label" data-i18n="archives.runningDays">{t('archives.runningDays')}</div>
      </div>
    </div>
  </div>

</div>

<script>
  import { initI18n } from '../../scripts/i18n-content-updater';
  initI18n();
</script>

<style>
  .archive-stats-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  /* 顶部关键指标网格 */
  .key-stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
  }

  .stat-card-compact {
    background: linear-gradient(135deg, 
      var(--md-sys-color-surface-container-lowest) 0%, 
      var(--md-sys-color-surface-container-low) 100%
    );
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 12px;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
  }

  .stat-card-compact:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    border-color: var(--md-sys-color-primary);
  }

  .stat-icon-wrapper {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    border-radius: 10px;
    flex-shrink: 0;
  }

  .stat-content {
    flex: 1;
    min-width: 0;
  }

  .stat-value {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
    margin-top: 0.125rem;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }
    background: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary);
    border-radius: 50%;
  }

  .featured-content {
    flex: 1;
  }

  .featured-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--md-sys-color-primary);
    line-height: 1;
  }

  .featured-label {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin-top: 0.375rem;
  }

  /* 环形图表 */
  .chart-section {
    flex: 1;
    display: flex;
    align-items: center;
  }

  .mini-stats {
    display: flex;
    gap: 1.25rem;
    width: 100%;
    justify-content: space-around;
  }

  .mini-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .mini-chart {
    width: 56px;
    height: 56px;
  }

  .circular-chart {
    display: block;
    max-width: 100%;
    max-height: 100%;
  }

  .circle-bg {
    fill: none;
    stroke: var(--md-sys-color-surface-variant);
    stroke-width: 2.8;
  }

  .circle {
    fill: none;
    stroke: var(--md-sys-color-primary);
    stroke-width: 2.8;
    stroke-linecap: round;
    animation: progress 1s ease-out forwards;
  }

  @keyframes progress {
    0% {
      stroke-dasharray: 0 100;
    }
  }

  .percentage {
    fill: var(--md-sys-color-on-surface);
    font-size: 0.5em;
    font-weight: 600;
    text-anchor: middle;
  }

  .mini-label {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
    font-weight: 500;
  }

  /* 右侧网格卡片 */
  .secondary-stats {
    grid-column: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }

  .stat-card {
    background: var(--md-sys-color-surface-container-low);
    border: 1px solid var(--md-sys-color-outline-variant);
    border-radius: 10px;
    padding: 1rem;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--md-sys-color-primary);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .stat-card:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--md-sys-color-primary);
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .stat-card:hover::before {
    transform: scaleX(1);
  }

  .stat-card-wide {
    grid-column: span 2;
  }

  .stat-icon-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .stat-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    border-radius: 10px;
    font-size: 1.25rem;
    transition: all 0.3s ease;
  }

  .group:hover .stat-icon {
    transform: scale(1.1) rotate(5deg);
    background: var(--md-sys-color-primary);
    color: var(--md-sys-color-on-primary);
  }

  .stat-content {
    flex: 1;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--md-sys-color-on-surface-variant);
    opacity: 0.8;
    margin-top: 0.25rem;
  }

  /* 徽章 */
  .stat-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    background: var(--md-sys-color-tertiary-container);
    color: var(--md-sys-color-on-tertiary-container);
    border-radius: 10px;
    font-size: 0.625rem;
    font-weight: 600;
  }

  /* 脉冲动画 */
  .stat-pulse {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
  }

  .pulse {
    display: block;
    width: 10px;
    height: 10px;
    background: var(--md-sys-color-tertiary);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.2);
    }
  }

  .truncate {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* 柱状图样式 */
  .mini-bar-chart {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--md-sys-color-surface-variant);
    border-radius: 0 0 10px 10px;
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--md-sys-color-primary), var(--md-sys-color-tertiary));
    transition: width 1s ease;
  }

  /* 折线图样式 */
  .mini-line-chart {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 20px;
    opacity: 0.8;
  }

  .mini-line-chart polyline {
    transition: all 0.5s ease;
  }

  .stat-card:hover .mini-line-chart polyline {
    stroke-width: 3;
    opacity: 1;
  }

  /* 半圆进度图 */
  .semi-circle-chart {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 42px;
    height: 21px;
  }

  .semi-circle-progress {
    transition: stroke-dasharray 1s ease;
  }

  /* 速度计 */
  .speedometer {
    position: absolute;
    bottom: 0.5rem;
    right: 0.5rem;
    width: 30px;
    height: 15px;
    border-radius: 15px 15px 0 0;
    border: 2px solid var(--md-sys-color-outline-variant);
    border-bottom: none;
    overflow: hidden;
  }

  .speed-needle {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 2px;
    height: 15px;
    background: var(--md-sys-color-error);
    transform-origin: bottom center;
    transition: transform 1s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* 迷你环形图 */
  .mini-donut-chart {
    position: absolute;
    bottom: 0.25rem;
    right: 0.25rem;
    width: 32px;
    height: 32px;
  }

  .mini-donut-chart circle {
    transition: stroke-dasharray 1s ease;
  }

  /* 进度条 */
  .progress-bar {
    width: 100%;
    height: 4px;
    background: var(--md-sys-color-surface-variant);
    border-radius: 2px;
    margin-top: 0.5rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--md-sys-color-secondary), var(--md-sys-color-tertiary));
    border-radius: 2px;
    transition: width 1.5s ease;
  }

  /* 响应式设计 */
  @media (max-width: 1024px) {
    .archive-stats-container {
      grid-template-columns: 1fr;
    }

    .main-stats,
    .secondary-stats {
      grid-column: 1;
    }

    .secondary-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .key-stats-grid {
      grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .archive-stats-container {
      gap: 0.75rem;
    }

    .stat-card-compact {
      padding: 0.75rem;
      gap: 0.5rem;
    }

    .stat-icon-wrapper {
      width: 36px;
      height: 36px;
    }

    .stat-value {
      font-size: 1.125rem;
    }

    .stat-label {
      font-size: 0.7rem;
    }

    .stat-card-large {
      padding: 1rem;
    }

    .featured-stat {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }

    .featured-icon {
      width: 48px;
      height: 48px;
    }

    .featured-value {
      font-size: 1.75rem;
    }

    .mini-stats {
      gap: 0.75rem;
    }

    .mini-chart {
      width: 48px;
      height: 48px;
    }

    .secondary-stats {
      grid-template-columns: 1fr;
      gap: 0.625rem;
    }

    .stat-card {
      padding: 0.875rem;
    }

    .stat-value {
      font-size: 1.25rem;
    }

    .stat-icon {
      width: 36px;
      height: 36px;
      font-size: 1.125rem;
    }
  }
</style>
