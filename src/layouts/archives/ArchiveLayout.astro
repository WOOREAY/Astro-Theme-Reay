---
/**
 * ArchiveLayout.astro
 * Archive page unified layout framework
 */
import DefaultLayout from '../base/DefaultLayout.astro';
import { useI18n } from '../../utils/i18n';

const { t } = useI18n();

interface Props {
  title: string;
  description: string;
  showBackButton?: boolean;
  backUrl?: string;
}

const { 
  title, 
  description, 
  showBackButton = true,
  backUrl = '/blog'
} = Astro.props;
---

<DefaultLayout title={title} description={description}>
  <div class="archive-layout">
    <!-- Page header -->
    <header class="archive-header">
      <div class="header-content">
        <h1 class="page-title">
          <i class="i-carbon:analytics"></i>
          <span data-i18n="archives.stats.title">{title}</span>
        </h1>
        <p class="page-description" data-i18n="archives.subtitle">{description}</p>
      </div>

      <!-- Navigation tabs -->
      <nav class="archive-nav">
        <a 
          href="/archives" 
          class="nav-item"
          class:list={[{ active: Astro.url.pathname === '/archives' }]}
        >
          <i class="i-carbon:analytics"></i>
          <span data-i18n="archives.nav.overview">{t('archives.nav.overview')}</span>
        </a>
        <a 
          href="/archives/tags" 
          class="nav-item"
          class:list={[{ active: Astro.url.pathname.startsWith('/archives/tags') }]}
        >
          <i class="i-carbon:tag"></i>
          <span data-i18n="archives.nav.tags">{t('archives.nav.tags')}</span>
        </a>
        <a 
          href="/archives/series" 
          class="nav-item"
          class:list={[{ active: Astro.url.pathname.startsWith('/archives/series') }]}
        >
          <i class="i-carbon:folder"></i>
          <span data-i18n="archives.nav.series">{t('archives.nav.series')}</span>
        </a>
        <a 
          href="/archives/timeline" 
          class="nav-item"
          class:list={[{ active: Astro.url.pathname.startsWith('/archives/timeline') }]}
        >
          <i class="i-carbon:time"></i>
          <span data-i18n="archives.nav.timeline">{t('archives.nav.timeline')}</span>
        </a>
      </nav>
    </header>

    <!-- Page content -->
    <main class="archive-main">
      <slot />
    </main>
  </div>
</DefaultLayout>

<script>
  import { initI18n } from '../../scripts/i18n-content-updater';
  initI18n();
</script>

<style>
  .archive-layout {
    min-height: 100vh;
    padding: 1.5rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .archive-header {
    margin-bottom: 2rem;
  }

  .header-content {
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .page-title {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .page-title i {
    font-size: 1.5rem;
    color: var(--md-sys-color-primary);
  }

  .page-description {
    font-size: 0.875rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.6;
  }

  .archive-nav {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background: var(--md-sys-color-surface-container-lowest);
    border-radius: 12px;
    border: 1px solid var(--md-sys-color-outline-variant);
    overflow-x: auto;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--md-sys-color-on-surface-variant);
    text-decoration: none;
    border-radius: 8px;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
    background: transparent;
  }

  .nav-item::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 8px;
    background: var(--md-sys-color-primary);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .nav-item:hover::before {
    opacity: 0.08;
  }

  .nav-item.active {
    background: transparent;
    color: var(--md-sys-color-on-surface-variant);
  }
  
  .nav-item.active > * {
    opacity: 0.4;
  }

  .nav-item.active::before {
    opacity: 0;
  }

  .nav-item i {
    font-size: 1.125rem;
  }

  .archive-main {
    animation: fadeInUp 0.5s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .archive-layout {
      padding: 1.5rem 1rem;
    }

    .page-title {
      font-size: 2rem;
    }

    .page-description {
      font-size: 1rem;
    }

    .archive-nav {
      gap: 0.375rem;
      padding: 0.375rem;
    }

    .nav-item {
      padding: 0.625rem 1rem;
      font-size: 0.8125rem;
    }

    .nav-item span {
      display: none;
    }

    .nav-item i {
      font-size: 1.25rem;
    }
  }

  /* Scrollbar styling */
  .archive-nav::-webkit-scrollbar {
    height: 4px;
  }

  .archive-nav::-webkit-scrollbar-track {
    background: transparent;
  }

  .archive-nav::-webkit-scrollbar-thumb {
    background: var(--md-sys-color-outline-variant);
    border-radius: 2px;
  }

  .archive-nav::-webkit-scrollbar-thumb:hover {
    background: var(--md-sys-color-outline);
  }
</style>
