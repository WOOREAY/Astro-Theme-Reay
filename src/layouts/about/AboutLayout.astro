---
/**
 * AboutLayout.astro
 * About page dedicated layout
 */
import DefaultLayout from '../base/DefaultLayout.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'About',
  description = 'Learn more about me',
} = Astro.props;
---

<DefaultLayout title={title} description={description}>
  <div class="about-layout">
    <div class="container">
      <slot />
    </div>
  </div>
</DefaultLayout>

<style>
  .about-layout {
    min-height: 100vh;
    padding: 2rem 0;
    background: var(--md-sys-color-surface);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (max-width: 768px) {
    .about-layout {
      padding: 1.5rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>
