---
/**
 * LinksLayout.astro
 * Links page dedicated layout
 */
import DefaultLayout from '../base/DefaultLayout.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Friend Links',
  description = 'Share quality websites and resources',
} = Astro.props;
---

<DefaultLayout title={title} description={description}>
  <div class="links-layout">
    <div class="container">
      <slot />
    </div>
  </div>
</DefaultLayout>

<style>
  .links-layout {
    min-height: 100vh;
    padding: 2rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (max-width: 768px) {
    .links-layout {
      padding: 1.5rem 0;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>
