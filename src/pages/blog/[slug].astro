---
/**
 * Blog post detail page
 * Route: /blog/[slug]
 */
import { getCollection, render } from 'astro:content';
import BlogPostLayout from '../../layouts/blog/BlogPostLayout.astro';
import { getSlugFromPostId } from '../../utils/blog';
import type { CollectionEntry } from 'astro:content';

// Generate static paths for all posts
export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    // Exclude drafts in production
    return import.meta.env.PROD ? !data.draft : true;
  });
  
  return posts.map((post) => ({
    params: { slug: getSlugFromPostId(post.id) },
    props: { post }
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// Use render function to render Markdown content (Astro v5)
const { Content, headings, remarkPluginFrontmatter } = await render(post);
---

<BlogPostLayout 
  post={post} 
  headings={headings}
  readingTime={remarkPluginFrontmatter?.readingTime}
  readingMinutes={remarkPluginFrontmatter?.readingMinutes}
>
  <Content />
</BlogPostLayout>

<!-- Add KaTeX styles in head -->
<link 
  slot="head" 
  rel="stylesheet" 
  href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" 
  integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" 
  crossorigin="anonymous"
/>
