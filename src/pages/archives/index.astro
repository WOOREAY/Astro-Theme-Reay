---
/**
 * Archives Index Page
 * Display all archive statistics and overview
 */
import ArchiveLayout from '../../layouts/archives/ArchiveLayout.astro';
import ArchiveStats from '../../components/archives/ArchiveStats.astro';
import TagCloud from '../../components/archives/TagCloud.astro';
import SeriesCard from '../../components/archives/SeriesCard.astro';
import { getArchiveStats, getAllTags, getAllSeries } from '../../utils/blog';
import { useI18n } from '../../utils/i18n';

const { t } = useI18n();

// Data layer: Get archive statistics
const stats = await getArchiveStats();
const allTags = await getAllTags();
const allSeries = await getAllSeries();

// Show only top 6 hottest tags
const topTags = allTags.slice(0, 12);

// Show only top 3 series
const topSeries = allSeries.slice(0, 3);
---

<ArchiveLayout
  title={t('archives.stats.title')}
  description={t('archives.subtitle')}
  showBackButton={true}
>
  <!-- Statistics panel -->
  <section class="stats-section">
    <ArchiveStats {...stats} />
  </section>

  <!-- Tag cloud preview -->
  {topTags.length > 0 && (
    <section class="tags-section">
      <div class="section-header">
        <h2 class="section-title">
          <i class="i-carbon:tag"></i>
          <span data-i18n="archives.hotTags">{t('archives.hotTags')}</span>
        </h2>
        <a href="/archives/tags" class="view-all">
          <span data-i18n="archives.viewAllTags">{t('archives.viewAllTags')}</span>
          <i class="i-carbon:arrow-right"></i>
        </a>
      </div>
      <TagCloud tags={topTags} />
      <div class="section-footer">
        <p class="hint-text">
          <span data-i18n="archives.hint.clickTag">Click on tags to view related posts, or</span>
          <a href="/archives/tags"><span data-i18n="archives.hint.browseAllTags">browse all {allTags.length} tags</span></a>
        </p>
      </div>
    </section>
  )}

  <!-- Series preview -->
  {topSeries.length > 0 && (
    <section class="series-section">
      <div class="section-header">
        <h2 class="section-title">
          <i class="i-carbon:folder"></i>
          <span data-i18n="archives.series">{t('archives.series')}</span>
        </h2>
        <a href="/archives/series" class="view-all">
          <span data-i18n="archives.viewAllSeries">{t('archives.viewAllSeries')}</span>
          <i class="i-carbon:arrow-right"></i>
        </a>
      </div>
      <div class="series-grid">
        {topSeries.map(item => (
          <SeriesCard 
            series={item.series}
            count={item.count}
            posts={item.posts}
          />
        ))}
      </div>
      {allSeries.length > 3 && (
        <div class="section-footer">
          <p class="hint-text">
            <span data-i18n="archives.hint.moreSeries">{allSeries.length - 3} more series available,</span>
            <a href="/archives/series"><span data-i18n="archives.hint.viewAllSeries">view all series</span></a>
          </p>
        </div>
      )}
    </section>
  )}

  <!-- Quick navigation -->
  <section class="quick-nav-section">
    <h2 class="section-title">
      <i class="i-carbon:explore"></i>
      <span data-i18n="archives.exploreMore">{t('archives.exploreMore')}</span>
    </h2>
    <div class="quick-nav-grid">
      <a href="/archives/timeline" class="quick-nav-card">
        <div class="nav-icon">
          <i class="i-carbon:time"></i>
        </div>
        <div class="nav-content">
          <h3 class="nav-title" data-i18n="archives.timeline">{t('archives.timeline')}</h3>
          <p class="nav-desc" data-i18n="archives.timeline.desc">{t('archives.timeline.desc')}</p>
        </div>
        <i class="i-carbon:arrow-right nav-arrow"></i>
      </a>

      <a href="/blog" class="quick-nav-card">
        <div class="nav-icon">
          <i class="i-carbon:blog"></i>
        </div>
        <div class="nav-content">
          <h3 class="nav-title" data-i18n="archives.blogList">{t('archives.blogList')}</h3>
          <p class="nav-desc" data-i18n="archives.blogList.desc">{t('archives.blogList.desc')}</p>
        </div>
        <i class="i-carbon:arrow-right nav-arrow"></i>
      </a>
    </div>
  </section>
</ArchiveLayout>

<script>
  import { initI18n } from '../../scripts/i18n-content-updater';
  initI18n();
</script>

<style>
  /* Global layout */
  section {
    margin-bottom: 2.5rem;
    animation: sectionFadeIn 0.6s ease-out backwards;
  }

  @keyframes sectionFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  section:nth-child(1) { animation-delay: 0.1s; }
  section:nth-child(2) { animation-delay: 0.2s; }
  section:nth-child(3) { animation-delay: 0.3s; }
  section:nth-child(4) { animation-delay: 0.4s; }

  /* Section header style enhancement */
  .section-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--md-sys-color-outline-variant);
    position: relative;
  }

  .section-header::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--md-sys-color-primary), var(--md-sys-color-tertiary));
    border-radius: 2px;
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 1.375rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0;
  }

  .section-title i {
    font-size: 1.25rem;
    color: var(--md-sys-color-primary);
  }

  .view-all {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--md-sys-color-primary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    background: var(--md-sys-color-surface-container-lowest);
    border: 1px solid var(--md-sys-color-outline-variant);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: absolute;
    right: 0;
    overflow: hidden;
  }

  .view-all::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    transition: left 0.5s ease;
  }

  .view-all:hover {
    background: var(--md-sys-color-primary-container);
    border-color: var(--md-sys-color-primary);
    gap: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .view-all:hover::before {
    left: 100%;
  }

  /* Section Footer */
  .section-footer {
    margin-top: 1.25rem;
    text-align: center;
    padding: 1rem;
    background: var(--md-sys-color-surface-container-lowest);
    border-radius: 10px;
    border: 1px dashed var(--md-sys-color-outline-variant);
  }

  .hint-text {
    font-size: 0.8125rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.6;
  }

  .hint-text a {
    color: var(--md-sys-color-primary);
    text-decoration: none;
    font-weight: 600;
    position: relative;
    padding-bottom: 2px;
  }

  .hint-text a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--md-sys-color-primary);
    transition: width 0.3s ease;
  }

  .hint-text a:hover::after {
    width: 100%;
  }

  /* Series grid optimization */
  .series-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1rem;
  }

  /* Quick navigation enhancement */
  .quick-nav-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, 
      var(--md-sys-color-surface-container-lowest) 0%, 
      var(--md-sys-color-surface-container-low) 100%
    );
    border-radius: 16px;
    border: 1px solid var(--md-sys-color-outline-variant);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
    text-align: center;
  }

  .quick-nav-section .section-title {
    justify-content: center;
  }

  .quick-nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 1rem;
    margin-top: 1.25rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .quick-nav-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--md-sys-color-surface);
    border: 2px solid var(--md-sys-color-outline-variant);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .quick-nav-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      var(--md-sys-color-primary-container),
      transparent
    );
    transition: left 0.6s ease;
  }

  .quick-nav-card:hover {
    background: var(--md-sys-color-surface-container);
    border-color: var(--md-sys-color-primary);
    transform: translateY(-3px) scale(1.01);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
  }

  .quick-nav-card:hover::before {
    left: 100%;
  }

  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(
      135deg,
      var(--md-sys-color-primary) 0%,
      var(--md-sys-color-tertiary) 100%
    );
    color: var(--md-sys-color-on-primary);
    font-size: 1.5rem;
    flex-shrink: 0;
    z-index: 1;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .quick-nav-card:hover .nav-icon {
    transform: scale(1.1) rotate(-6deg);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.25);
  }

  .nav-content {
    flex: 1;
    min-width: 0;
    z-index: 1;
  }

  .nav-title {
    font-size: 1rem;
    font-weight: 700;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.375rem 0;
    transition: color 0.3s ease;
  }

  .quick-nav-card:hover .nav-title {
    color: var(--md-sys-color-primary);
  }

  .nav-desc {
    font-size: 0.8125rem;
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
    line-height: 1.5;
  }

  .nav-arrow {
    font-size: 1.25rem;
    color: var(--md-sys-color-primary);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
  }

  .quick-nav-card:hover .nav-arrow {
    transform: translateX(6px) scale(1.15);
  }

  /* Tags and series section spacing optimization */
  .tags-section {
    position: relative;
  }

  .series-section {
    position: relative;
  }

  /* Responsive design */
  @media (max-width: 1024px) {
    section {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.25rem;
    }

    .section-title i {
      font-size: 1.125rem;
    }

    .quick-nav-section {
      padding: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    section {
      margin-bottom: 1.75rem;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
      margin-bottom: 1rem;
    }

    .section-title {
      font-size: 1.125rem;
    }

    .section-title i {
      font-size: 1rem;
    }

    .view-all {
      align-self: flex-end;
      padding: 0.375rem 0.875rem;
      font-size: 0.75rem;
    }

    .series-grid {
      grid-template-columns: 1fr;
      gap: 0.875rem;
    }

    .quick-nav-section {
      padding: 1rem;
    }

    .quick-nav-grid {
      grid-template-columns: 1fr;
      gap: 0.875rem;
    }

    .quick-nav-card {
      padding: 1rem;
    }

    .nav-icon {
      width: 44px;
      height: 44px;
      font-size: 1.375rem;
    }

    .nav-title {
      font-size: 0.9375rem;
    }

    .nav-desc {
      font-size: 0.75rem;
    }

    .section-footer {
      padding: 0.875rem;
    }
  }
</style>
