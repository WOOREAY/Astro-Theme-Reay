---
/**
 * Single Series Page
 * Display all posts in a series
 */
import type { CollectionEntry } from 'astro:content';
import ArchiveLayout from '../../../layouts/archives/ArchiveLayout.astro';
import { getAllSeries, getPostsBySeries, formatDate, getPostUrl } from '../../../utils/blog';

export async function getStaticPaths() {
  const series = await getAllSeries();
  
  return series.map(({ series: seriesName }) => ({
    params: { series: seriesName },
  }));
}

const { series } = Astro.params;

// Data layer: Get all posts in this series
const posts = await getPostsBySeries(series);
const allSeries = await getAllSeries();
const currentSeries = allSeries.find(s => s.series === series);

// Calculate progress
const totalPosts = posts.length;
const completedPosts = totalPosts; // Simplified: assume all posts are completed
const progress = totalPosts > 0 ? Math.round((completedPosts / totalPosts) * 100) : 0;
---

<ArchiveLayout
  title={series}
  description={`${series} series, ${posts.length} posts in total`}
  showBackButton={true}
  backUrl="/archives/series"
>
  <!-- Series info card -->
  <div class="series-info-card">
    <div class="series-header">
      <div class="series-icon">
        <i class="i-carbon:folder"></i>
      </div>
      <div class="series-details">
        <h2 class="series-name">{series}</h2>
        <div class="series-meta">
          <span class="meta-item">
            <i class="i-carbon:document"></i>
            {posts.length} posts
          </span>
          <span class="meta-item">
            <i class="i-carbon:time"></i>
            About {posts.length * 5} min read
          </span>
          {currentSeries && allSeries.length > 0 && (
            <span class="meta-item">
              <i class="i-carbon:trophy"></i>
              Rank #{allSeries.findIndex(s => s.series === series) + 1}
            </span>
          )}
        </div>
      </div>
    </div>

    <!-- Progress bar -->
    <div class="series-progress">
      <div class="progress-header">
        <span class="progress-label">Reading Progress</span>
        <span class="progress-percentage">{progress}%</span>
      </div>
      <div class="progress-bar">
        <div class="progress-fill" style={`width: ${progress}%`}></div>
      </div>
    </div>
  </div>

  <!-- Posts list -->
  {posts.length > 0 ? (
    <section class="posts-section">
      <h3 class="section-title">
        <i class="i-carbon:book"></i>
        Chapters
      </h3>
      <div class="posts-list">
        {posts.map((post, index) => (
          <a href={getPostUrl(post)} class="post-card">
            <div class="post-number">{(post.data.seriesOrder || index + 1).toString().padStart(2, '0')}</div>
            <div class="post-content">
              <h4 class="post-title">{post.data.title}</h4>
              {post.data.description && (
                <p class="post-description">{post.data.description}</p>
              )}
              <div class="post-footer">
                <span class="post-date">
                  <i class="i-carbon:calendar"></i>
                  {formatDate(post.data.publishDate)}
                </span>
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map(tag => (
                      <span class="tag-badge">#{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </div>
            <div class="post-arrow">
              <i class="i-carbon:arrow-right"></i>
            </div>
          </a>
        ))}
      </div>
    </section>
  ) : (
    <div class="empty-state">
      <i class="i-carbon:document-blank"></i>
      <h3>Empty Series</h3>
      <p>No posts in this series yet</p>
    </div>
  )}

  <!-- Series navigation -->
  {allSeries.length > 1 && (
    <section class="series-nav-section">
      <h3 class="section-title">
        <i class="i-carbon:grid"></i>
        Other Series
      </h3>
      <div class="series-nav-grid">
        {allSeries
          .filter(s => s.series !== series)
          .slice(0, 4)
          .map(s => (
            <a href={`/archives/series/${s.series}`} class="series-nav-card">
              <div class="nav-card-icon">
                <i class="i-carbon:folder"></i>
              </div>
              <div class="nav-card-content">
                <h4 class="nav-card-title">{s.series}</h4>
                <p class="nav-card-count">{s.count} posts</p>
              </div>
              <i class="i-carbon:arrow-right nav-card-arrow"></i>
            </a>
          ))}
      </div>
    </section>
  )}
</ArchiveLayout>

<script>
  /**
   * Save scroll position
   * When clicking post links, save current page scroll position
   */
  function saveScrollPosition() {
    const scrollPosition = {
      x: window.scrollX,
      y: window.scrollY,
      path: window.location.pathname
    };
    sessionStorage.setItem('scrollPosition', JSON.stringify(scrollPosition));
  }

  // Restore scroll position
  function restoreScrollPosition() {
    const saved = sessionStorage.getItem('scrollPosition');
    if (saved) {
      try {
        const { x, y, path } = JSON.parse(saved);
        // Only restore scroll position for the same path
        if (path === window.location.pathname) {
          setTimeout(() => {
            window.scrollTo(x, y);
            sessionStorage.removeItem('scrollPosition');
          }, 100);
        }
      } catch (e) {
        console.error('Failed to restore scroll position:', e);
      }
    }
  }

  // Attach scroll save listeners to all post links
  function attachScrollSaveListeners() {
    document.querySelectorAll('a[href^="/blog/"]').forEach(link => {
      link.addEventListener('click', saveScrollPosition);
    });
  }

  // Execute on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      restoreScrollPosition();
      attachScrollSaveListeners();
    });
  } else {
    restoreScrollPosition();
    attachScrollSaveListeners();
  }

  // Support Astro View Transitions
  document.addEventListener('astro:page-load', () => {
    restoreScrollPosition();
    attachScrollSaveListeners();
  });
</script>

