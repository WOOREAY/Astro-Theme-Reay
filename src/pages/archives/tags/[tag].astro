    color: var(--md-sys-color-primary);
  }

  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    background: var(--md-sys-color-surface-container-lowest);
    border-radius: 16px;
    border: 1px dashed var(--md-sys-color-outline-variant);
  }

