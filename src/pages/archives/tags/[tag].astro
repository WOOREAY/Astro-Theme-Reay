    font-size: 4rem;
    color: var(--md-sys-color-outline);
    margin-bottom: 1rem;
  }

  .empty-state h3 {
    font-size: 1.5rem;
    color: var(--md-sys-color-on-surface);
    margin: 0 0 0.5rem 0;
  }

  .empty-state p {
    color: var(--md-sys-color-on-surface-variant);
    margin: 0;
  }

  @media (max-width: 768px) {
    .tag-info-card {
      padding: 1rem;
    }

    .tag-header {
      gap: 0.75rem;
    }

    .tag-icon {
      width: 40px;
      height: 40px;
      font-size: 1.25rem;
    }

    .tag-name {
      font-size: 1.25rem;
    }

    .tag-stats {
      font-size: 0.75rem;
    }

    .section-title {
      font-size: 1.125rem;
    }
  }
</style>
