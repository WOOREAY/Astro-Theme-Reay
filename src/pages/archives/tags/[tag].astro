---
/**
 * Single Tag Page
 * Display all posts under a specific tag
 */
import type { CollectionEntry } from 'astro:content';
import ArchiveLayout from '../../../layouts/archives/ArchiveLayout.astro';
import BlogTimeline from '../../../components/blog/BlogTimeline.astro';
import { getAllPosts, getPostsByTag, getAllTags } from '../../../utils/blog';

export async function getStaticPaths() {
  const tags = await getAllTags();
  
  return tags.map(({ tag }) => ({
    params: { tag },
  }));
}

const { tag } = Astro.params;

// Data layer: Get all posts under this tag
const posts = await getPostsByTag(tag);
const allTags = await getAllTags();
const currentTagInfo = allTags.find(t => t.tag === tag);

// Related tags (frequently appearing together)
const getRelatedTags = () => {
  const tagMap = new Map<string, number>();
  posts.forEach(post => {
    post.data.tags.forEach(t => {
      if (t !== tag) {
        tagMap.set(t, (tagMap.get(t) || 0) + 1);
      }
    });
  });
  return Array.from(tagMap.entries())
    .map(([t, count]) => ({ tag: t, count }))
    .sort((a, b) => b.count - a.count)
    .slice(0, 5);
};

const relatedTags = getRelatedTags();
---

<ArchiveLayout
  title={`#${tag}`}
  description={`${posts.length} posts with tag "${tag}"`}
  showBackButton={true}
  backUrl="/archives/tags"
>
  <!-- Tag info card -->
  <div class="tag-info-card">
    <div class="tag-header">
      <div class="tag-icon">
        <i class="i-carbon:tag"></i>
      </div>
      <div class="tag-details">
        <h2 class="tag-name">#{tag}</h2>
        <p class="tag-stats">
          Total {posts.length} posts
          {currentTagInfo && allTags.length > 0 && (
            <span class="tag-rank">
              Â· Rank #{allTags.findIndex(t => t.tag === tag) + 1}/{allTags.length}
            </span>
          )}
        </p>
      </div>
    </div>

    <!-- Related tags -->
    {relatedTags.length > 0 && (
      <div class="related-tags">
        <h3 class="related-title">
          <i class="i-carbon:connect"></i>
          Related Tags
        </h3>
        <div class="related-tags-list">
          {relatedTags.map(t => (
            <a href={`/archives/tags/${t.tag}`} class="related-tag">
              #{t.tag}
              <span class="related-count">{t.count}</span>
            </a>
          ))}
        </div>
      </div>
    )}
  </div>

  <!-- Posts list -->
  {posts.length > 0 ? (
    <section class="posts-section">
      <h3 class="section-title">
        <i class="i-carbon:document"></i>
        Posts List
      </h3>
      <BlogTimeline posts={posts} />
    </section>
  ) : (
    <div class="empty-state">
      <i class="i-carbon:document-blank"></i>
      <h3>No Posts Yet</h3>
      <p>No posts under this tag yet</p>
    </div>
  )}
</ArchiveLayout>

<style>
